# ClipSmart Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=ClipSmart API
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS and Security
ALLOWED_HOSTS=["http://localhost:3000","http://localhost:8080","https://clipsmart.aetherpro.com"]

# Database Configuration
DATABASE_URL=postgresql+asyncpg://clipsmart_user:clipsmart_password@localhost:5432/clipsmart

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Authentication
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MiniMax-M2 API Configuration
MINIMAX_API_KEY=sk-your-minimax-api-key-here
MINIMAX_API_BASE_URL=https://api.minimax.chat/v1

# YouTube Data API v3
YOUTUBE_API_KEY=your-youtube-api-key-here

# Tavily Search API
TAVILY_API_KEY=your-tavily-api-key-here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# File Storage
UPLOAD_DIR=/tmp/clipsmart/uploads
EXPORT_DIR=/tmp/clipsmart/exports
MAX_FILE_SIZE_MB=500
ALLOWED_EXTENSIONS=["mp4","mov","avi","webm","mkv"]

# Video Processing
FFMPPEG_PATH=ffmpeg
VIDEO_RESOLUTIONS=["720x1280","1080x1920"]
DEFAULT_FPS=30

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
MAX_WORKERS=4

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Processing Quotas
FREE_USER_MONTHLY_QUOTA=10
PRO_USER_MONTHLY_QUOTA=100
ENTERPRISE_USER_MONTHLY_QUOTA=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Static Files
STATIC_FILES_DISABLED=false

# AI Processing
MINIMAX_ANALYSIS_TIMEOUT=30
CLIP_SENSITIVITY_DEFAULT=0.75
MAX_CLIPS_PER_VIDEO=50
MIN_CLIP_DURATION=3.0
MAX_CLIP_DURATION=30.0

# Performance
CACHE_TTL=3600
ENABLE_CACHING=true

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=true

# Development specific
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000