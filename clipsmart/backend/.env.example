# Application
APP_NAME=ClipSmart API
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/clipsmart

# Redis
REDIS_URL=redis://localhost:6379/0

# Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
MINIMAX_API_KEY=your-minimax-api-key-here
MINIMAX_API_BASE_URL=https://api.minimax.chat/v1

YOUTUBE_API_KEY=your-youtube-api-key-here
TAVILY_API_KEY=your-tavily-api-key-here

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# File Storage
UPLOAD_DIR=/tmp/clipsmart/uploads
EXPORT_DIR=/tmp/clipsmart/exports
MAX_FILE_SIZE_MB=500

# Video Processing
FFMPPEG_PATH=ffmpeg
DEFAULT_FPS=30

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
MAX_WORKERS=4

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Processing Quotas
FREE_USER_MONTHLY_QUOTA=10
PRO_USER_MONTHLY_QUOTA=100
ENTERPRISE_USER_MONTHLY_QUOTA=1000

# Logging
LOG_LEVEL=INFO

# AI Processing
MINIMAX_ANALYSIS_TIMEOUT=30
CLIP_SENSITIVITY_DEFAULT=0.75
MAX_CLIPS_PER_VIDEO=50
MIN_CLIP_DURATION=3.0
MAX_CLIP_DURATION=30.0

# Performance
CACHE_TTL=3600
ENABLE_CACHING=True

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=True
